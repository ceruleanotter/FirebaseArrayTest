<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/to_push"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Text to Push"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Push it to Firebase"
        android:onClick="onPushClicked"/>

    <TextView
        android:id="@+id/push_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/to_array"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Text to Push"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add it To Array"
        android:onClick="onArrayClicked"/>

    <TextView
        android:id="@+id/array_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>
